<Window x:Class="Activity_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Activity_Manager"
        mc:Ignorable="d"
        Title="Gestionnaire d'activité" Height="450" Width="800">

    <StackPanel>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open"
                          Name="menu_open"/>
                <MenuItem Header="Save"
                          Name="menu_save"/>
                <Separator/>
                <MenuItem Header="Import"
                          Name="menu_import"/>
                <MenuItem Header="Export"
                          Name="menu_export"/>
                <Separator/>
                <MenuItem Header="Exit"
                          Name="menu_exit"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Option"
                          Name="menu_option"/>
                <MenuItem Header="About Box"
                          Name="menu_about"
                          Click="Menu_about_Click"/>
            </MenuItem>
        </Menu>
        <ToolBar Band="1">
            <Button Name="bouton_create"
                    Click="Bouton_create_Click">Créer une activité</Button>
            <Button Name="bouton_delete">Supprimer une activité</Button>
            <Button Name="bouton_modify">Modifier une activité</Button>
        </ToolBar>
        <Grid VerticalAlignment="Center"
              HorizontalAlignment="Stretch">
            <StackPanel Name="modify_event"
                        Orientation="Vertical"
                        Grid.Column="1">
                <Label Content="Nom"/>
                <TextBox Name="modify_event_name"
                         IsReadOnly="True"/>
                <Separator/>
                <Label Content="Lieu"/>
                <TextBox Name="modify_event_lieu"
                         IsReadOnly="True"/>
                <Separator/>
                <Label Content="Description"/>
                <TextBox Name="modify_event_description"
                         IsReadOnly="True"/>
                <Separator/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Nombre d'occurrence"/>
                    <TextBox Name="modify_event_occurence"
                             IsReadOnly="True"/>
                </StackPanel>
                <Label Content="Periodicite"/>
                <ComboBox Name="modify_event_periodicite"
                          IsReadOnly="True">
                    <ComboBoxItem Content="Annuel"/>
                </ComboBox>
            </StackPanel>
            <GridSplitter/>
            <DataGrid Name="main_panel"
                      ItemsSource="{Binding}"
                      IsReadOnly="True"
                      
                      Grid.Column="0" SelectionChanged="Main_panel_SelectionChanged">
            </DataGrid>
        </Grid>
    </StackPanel>
</Window>
